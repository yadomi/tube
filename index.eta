  <aside>Last build: <%= new Date().toISOString() %></aside>
  <main>
    <% for (let item of it.data) { %>
    <% const now = new Date(item.published_at) %>
    <% const publishedAt = new Date(item.published_at) %>
    <% const diff = Math.floor((now - publishedAt) / (1000 * 60 * 60 * 24)) %>
    <article data-day="<%= diff %>">

      <a target="_blank" href="<%= item.link %>">
        <img loading="lazy" src="<%= item.thumbnail %>" alt="" />
      </a>

      <h1>
        <a target="_blank" href="<%= item.link %>">
          <%= item.title %>
        </a>
      </h1>
      <span>
        <a target="_blank" href="<%= item.author.uri %>"><%= item.author.name %></a> -
        <span title="<%= publishedAt.toLocaleTimeString() %>"><%= publishedAt.toLocaleDateString() %></span>
      </span>
    </article>
    <% } %>
  </main>
</body>

</html>
