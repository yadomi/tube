<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tube</title>
  <style type="text/css">
    :root {
      --body-bg-color: #f6f6ef;
      --body-text-color: #333;
      --article-bg-color: #d9d9d9;
      --article-border-color: #e3e3e3;
      --article-text-color: #333;
      --article-visited-color: #828282;
      --article-meta-color: #828282;
    }

    body {
      font-family: Verdana, Geneva, sans-serif;
      margin: 0;
      padding: 0;
      background-color: var(--body-bg-color);
      color: var(--body-text-color);
    }

    @media (prefers-color-scheme: dark) {
      body {
        --body-bg-color: #020202;
        --body-text-color: #e0e0e0;
        --article-bg-color: #0b0b0b;
        --article-border-color: #4a4a4a;
        --article-text-color: #e0e0e0;
        --article-visited-color: #cccccc;
        --article-meta-color: #cccccc;
      }
    }

    main {
      width: 85%;
      margin: 24px auto;
    }

    article:hover {
      background-color: var(--article-bg-color);
    }

    article {
      border: 1px solid var(--article-border-color);
      border-radius: 4px;
      padding: 16px;
      display: grid;
      grid-template-columns: 96px 1fr 1fr;
      gap: 0px 0px;
      grid-auto-flow: row;
      grid-template-areas:
        "thumbnail title title"
        "thumbnail meta meta";
      margin-bottom: 10px;
    }

    article h1 a {
      color: var(--article-text-color);
      text-decoration: none;
      font-size: 16px;
    }

    article h1 a:visited {
      color: var(--article-visited-color);
    }

    article h1 a:hover {
      text-decoration: underline;
    }

    article h1 {
      margin: 0;
      padding: 0;
      font-weight: normal;
      grid-area: title;
    }

    article span {
      font-size: 12px;
      grid-area: meta;
      color: var(--article-meta-color);
    }

    article span a {
      color: var(--article-meta-color);
      text-decoration: none;
    }

    article span a:hover {
      text-decoration: underline;
    }

    article>a:first-child {
      grid-area: thumbnail;
      display: flex;
    }

    article img {
      --height: 42px;
      height: var(--height);
      object-fit: cover;
      <% /* height: calc(64px * (9/16)); */ %>
      width: calc(var(--height) * (16/9));
      border-radius: 4px;
    }

    section {
      display: flex;
      justify-content: center;
    }

    aside {
      font-size: 10px;
      position: fixed;
      bottom: 4px;
      left: 4px;
    }

    input[name="filter"][value="today"]:checked~main article[data-day="0"] {
      display: grid;
    }

    input[name="filter"][value="week"]:checked~main article {
      display: grid;
    }

    input[name="filter"][value="week"]:checked~.menu label[for="filter-week"],
    input[name="filter"][value="today"]:checked~.menu label[for="filter-today"] {
      background-color: var(--article-bg-color);
    }

    input[type="radio"] {
      display: none;
    }

    .menu label {
      padding: 8px;
      cursor: pointer;
      border-radius: 4px;
      margin-right: 8px;
    }

    .menu label:hover {
      background-color: var(--article-bg-color);
    }

    .menu {
      width: 85%;
      margin: 24px auto;
    }
  </style>
</head>

<body>
  <input type="radio" id="filter-today" name="filter" value="today" checked />
  <input type="radio" id="filter-week" name="filter" value="week" />

  <div class="menu">
    <div>
      <label for="filter-today">Today </label>
      <label for="filter-week">Week</label>
    </div>
  </div>

  <aside>Last build: <%= new Date().toISOString() %></aside>
  <main>
    <% for (let item of it.data) { %>
    <% const now = new Date(item.published_at) %>
    <% const publishedAt = new Date(item.published_at) %>
    <% const diff = Math.floor((now - publishedAt) / (1000 * 60 * 60 * 24)) %>
    <article data-day="<%= diff %>">

      <a target="_blank" href="<%= item.link %>">
        <img loading="lazy" src="<%= item.thumbnail %>" alt="" />
      </a>

      <h1>
        <a target="_blank" href="<%= item.link %>">
          <%= item.title %>
        </a>
      </h1>
      <span>
        <a target="_blank" href="<%= item.author.uri %>"><%= item.author.name %></a> -
        <span title="<%= publishedAt.toLocaleTimeString() %>"><%= publishedAt.toLocaleDateString() %></span>
      </span>
    </article>
    <% } %>
  </main>
</body>

</html>
